<div class="navbar_user">

    <div class="navbar_row no_padding relative" >

      <div class="navbar_user_col--logo">

        <a href = "/">
          <img src = <%= `./${root}/images/e_logo.png `%> class="margin-top-7_5 navbar_user_logo" alt = "logo" />
        </a>

      </div>

      <div class="navbar_user_col--delivery">

          <p class="navbar_user_subtitle--deliver margin-left-5 padding-left-10">

            <strong>Delivering to</strong>

            <br />
            Scottdale Arizona 852....
            <br />

            <span>
              Update Location
            </span>

         </p>

      </div>

      <div class="navbar_user_col--search">

          <div>

              <span class="navbar_user_search_container">

                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                  </svg>

              </span>

              <input class="form-control no-border navbar_user_input--search"  placeholder = "Search for Item">

          </div>

      </div>

      <% if (!isAuthenticated){ %>

      <div class="navbar_user_col--signin">

          <p class="navbar_user_subtitle--welcome medium-font ">
            Hello! Sign in to
            <br/>

            <span class="bold medium-font navbar_user_login_container">
              <a href="/login">Customer</a> |  <a href="/admin/login">Admin</a>
            </span>

          </p>

      </div>

      <% } %>

        <% if(isAuthenticated){ %>

          <div class="navbar_user_col--order">
              <p class="navbar_user_button--order">Your Orders </p>
          </div>

          <div class="navbar_user_col--cart relative" >

          <a href="/cart">

            <img src=<%= `./${root}/images/cart.png` %> class="navbar_user_icon--cart" />

            <div class="navbar_user_container--cart">

              <% if(cart){ %>

                  <% if(cart.items.length > 0) { %>
                    <p id="cart_number" > <%= cart.items.length %> </p>
                 <%}else{ %>
                   <p id="cart_number">0</p>
                  <%}%>

              <% } %>

            </div>

          </a>

        </div>

        <div class="navbar_user_col--profile"  >

          <div class="navbar_user_dropdown_list_container relative">

            <img class="navbar_user_icon--profile" src = <%= `./${root}/images/profile_img.png` %>>

            <div class="navbar_user_list dropdown_list--inner">

              <div class=" dropdown_item navbar_user_list_dropdown--item" id="update_location">
                <p class="dropdown_title navbar_user_list_dropdown--title">Update Location</p>
              </div>

              <div class="dropdown_item navbar_user_list_dropdown--item" id = "edit_profile">
                <p class="dropdown_title navbar_user_list_dropdown--title">Edit Profile</p>
              </div>

              <div class="dropdown_item navbar_user_list_dropdown--item">
                <p class="dropdown_title navbar_user_list_dropdown--title">Orders</p>
              </div>

              <div class="dropdown_item logout navbar_user_list_dropdown--item">
                <p class="dropdown_title navbar_user_list_dropdown--title">Logout</p>
              </div>

            </div>

          </div>

        </div>
            <%}else{%>
              <div class="relative navbar_user_col--create" >

                <a href = "/create_account">
                  <button class=" navbar_user_button--create" > Create Account </button>
                </a>

              </div>
            <%}%>

        </div>

   </div>

   <% if(catagories.length > 0 ){ %>

     <div class = "navbar_user_sub_banner">


           <% for(var i = 0; i < catagories.length; i++){ %>

                <p class="navbar_user_sub_catagory--title" data = <%= catagories[i].catagory %> ><%= catagories[i].catagory %>
                  <span class="navbar_user_sub_catagory--underline" data = <%= catagories[i].catagory %>  ></span>
                </p>

           <% } %>


         </div>
   <% } %>
