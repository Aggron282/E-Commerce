<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>

    <meta charset="utf-8">
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://fonts.cdnfonts.com/css/amazon-ember" rel="stylesheet">
    <link href ='/css/animations.css' rel="stylesheet"/>

    <link href ='/css/login.css' rel="stylesheet"/>
    <link href = "/css/popup.css" rel = "stylesheet" />

  <meta name="google-signin-client_id" content="701475510454-imk4kiu0cmqde35961smo8c308gs34uo.apps.googleusercontent.com.apps.googleusercontent.com">
  </head>

  <body>

  <div class="container-fluid">


    <div class="authentication_container authentication_container--<%= type.toLowerCase() %>">

      <p class="authentication_type"> <%= type %> </p>

        <div class="authentication_container--inner">


            <div class="authentication_intro_container">

              <img class="login_img--logo" src = "./../images/new_logo--2.png" />

              <p class="login_text login_text--title">Login to Your Account</p>
              <p class="login_text--subtitle login_text">To buy products, you must login with E-Commerce or through Google</p>

            </div>

            <div class="form_container">

              <% var redirect = "/" %>

              <% if (type != "user") { %>
                  <% redirect = "/admin" %>
              <%}%>

              <form id="<%= 'login--'+type.toLowerCase() %>" button_id = '<%="auth_btn--"+type.toLowerCase() %>' method = "POST" redirect = "<%= redirect %>" action = <%= url %> >

                    <div class="authentication_input_container">

                      <label>
                          Username
                      </label>

                      <input
                      class ="login_form"
                      value ="<%= userInput.email %>"  name = "email" placeholder = "Enter Username"/>

                    </div>

                    <div class="authentication_input_container">

                      <label>
                          Password
                      </label>

                      <input  class ="login_form"
                        value= "<%= userInput.password %>" name = "password" type="password" placeholder = "Enter Password"/>

                    </div>

                    <button class="authentication_button authentication_button--submit" id='<%="auth_btn--"+type.toLowerCase() %>' type="submit">Login</button>

                    <br />

                    <div class="g-signin2 authentication_button--google width-100 margin-top-5" data-onsuccess="onSignIn"></div>

              </form>

              <a href = "/reset"> <button class="authentication_button--forgot">Forgot Password?</button> </a>

              <br />

              <a href = "/<%= type.toLowerCase() %>/create_account"> <button class="authentication_button--forgot">Don't have an account? Create one here</button> </a>

            </div>

        </div>

      </div>

    </div>

<script src = "https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyACepJIoDZ1rhhju2bK-lO23qIzaKwXsnY&loading=async&libraries=maps,marker&v=beta" defer> </script>
<script src = "/js/util.js" ></script>
<script src = "/js/auth/login.js" ></script>

<% if(type == "user"){ %>
  <script>
    var create = document.querySelector("#login--user");
    Init_Login(login_form);
  </script>
<% }else{ %>
  <script>
    var login_form = document.querySelector("#login--admin");
    Init_Login(login_form);
  </script>
<%}%>
<script src="https://apis.google.com/js/platform.js" async defer></script>
</body>
