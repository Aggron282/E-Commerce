<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>

    <meta charset="utf-8">
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://fonts.cdnfonts.com/css/amazon-ember" rel="stylesheet">
    <link href ='/css/animations.css' rel="stylesheet"/>

    <link href ='/css/login.css' rel="stylesheet"/>
    <link href = "/css/popup.css" rel = "stylesheet" />

  </head>

  <body>

  <div class="container-fluid">

    <div class="authentication_container authentication_container--<%= type.toLowerCase() %> ">

        <p class="authentication_type"> <%= type %> </p>

        <div class="row">

            <div class="col-4"></div>

            <div class="col-4 create_account_col ">

                <div class="create_account_modal padding-bottom-10">

                    <p class="create_account_text--title">Get Started</p>

                    <form action = <%= url %> method = "POST">

                      <div class="authentication_input_container">

                        <label>
                            Full Name
                        </label>
                        <% if(validationErrors.find(e=>e.path == 'name')) {%>
                          <% var error_name = validationErrors.find(e=>e.path == 'name')%>
                          <% error_name = error_name.msg %>
                          <span class="authentication_span--error"> <%= error_name %> </span>
                          <% } %>
                          <input  class ="authentication_input <%= validationErrors.find(e=>e.path == 'name') ? 'authentication_input--error' :  ''  %>"
                            name = "name" value = "<%= userInput.name %>" placeholder = "Enter Full Name"/>

                      </div>

                      <div class="authentication_input_container">

                        <label>
                          Create Username
                        </label>

                        <% if(validationErrors.find(e=>e.path == 'email')) {%>
                          <% var error_email = validationErrors.find(e=>e.path == 'email')%>
                          <% error_email = error_email.msg %>
                            <span class="authentication_span--error"> <%= error_email %> </span>
                          <% } %>

                        <input class =" authentication_input <%= validationErrors.find(e=>e.path == 'email') ? 'authentication_input--error' :  ''  %>"
                          name = "email"  value = "<%= userInput.email %>" placeholder = "Enter Email"/>

                      </div>

                      <div class="authentication_input_container">

                        <label>
                            Create Password
                        </label>

                        <% if(validationErrors.find(e=>e.path == 'password')) {%>
                          <% var error_password = validationErrors.find(e=>e.path == 'password')%>
                          <% error_password = error_password.msg %>
                            <span class="authentication_span--error"> <%= error_password %> </span>
                          <% } %>

                        <input name = "password"  class ="authentication_input <%= validationErrors.find(e=>e.path == 'password') ? 'authentication_input--error' :  ''  %>"
                         value = "<%= userInput.password %>" type="password" placeholder = "Enter Password"/>

                      </div>

                    <button class="authencation_button--create authentication_button" type="submit">Create Account</button>

                  </form>

                  <img class="create_account_img--logo" src = "./../images/new_logo--2.png" />

                </div>

             </div>

            <div class="col-4"></div>

        </div>

     </div>



  </div>


  <script src = "https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyACepJIoDZ1rhhju2bK-lO23qIzaKwXsnY&loading=async&libraries=maps,marker&v=beta" defer> </script>
  <script src = "/js/util.js" ></script>
  <script src="https://apis.google.com/js/platform.js" async defer></script>

  </body>
